#!/bin/sh
#|-*- mode:lisp -*-|#
#|
exec ros -Q -- $0 "$@"
|#
(progn ;;init forms
  (ros:ensure-asdf)
  #+quicklisp (ql:quickload '(lisp-chat/client) :silent t))

(defpackage :ros.script.lisp-chat
  (:use :cl))
(in-package :ros.script.lisp-chat)

(eval-when (:compile-toplevel :load-toplevel :execute)
  (when (equal (uiop:getenv "APP_ENV") "PROD")
    (setq lisp-chat/config:*host* "wss://chat.manoel.dev/ws")))

(defparameter *usage*
  (format nil
          "usage: lisp-chat [-h|--help] [host] [port]

OPTIONS
    host          server host, default: ~a
    port          server port, default: ~a
    -h | --help   show this message
" lisp-chat/config:*host*
  lisp-chat/config:*port*))

(defun help-p (argv)
  (when (loop for arg in argv
              thereis (or (equal arg "-h")
                         (equal arg "--help")))
    (princ *usage*)))

(defun usage ()
  (princ *usage*))

(defun setup-host-port (host port)
  (when host
    (setq lisp-chat/config:*host* host)
    ;; If host is WS, we might want to default to websocket-port if port not provided
    (when (and (lisp-chat/client::websocket-p host port)
               (null port))
      (setq lisp-chat/config:*port* lisp-chat/config:*websocket-port*)))
  (when port
    (setq lisp-chat/config:*port* (parse-integer port))))

(defun main (&rest argv)
  (let ((host (car argv))
        (port (cadr argv)))
    (setup-host-port host port))

  (if (help-p argv)
      (usage)
      (lisp-chat/client:main :host lisp-chat/config:*host*
                             :port lisp-chat/config:*port*)))
